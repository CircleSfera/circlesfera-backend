# ─── Database ────────────────────────────────────────────────────────
# PostgreSQL connection string used by Prisma
POSTGRES_USER="your_db_user"
POSTGRES_PASSWORD="your_db_password"
POSTGRES_DB="circlesfera"
DB_HOST="127.0.0.1"
DB_PORT="5432"
DATABASE_URL="postgresql://user:password@localhost:5432/circlesfera?schema=public"

# ─── JWT Secrets ─────────────────────────────────────────────────────
# Generate with: openssl rand -base64 48
# MUST be different from each other and ≥ 64 characters
JWT_SECRET="generate-with-openssl-rand-base64-48"
JWT_REFRESH_SECRET="generate-a-different-secret-with-openssl-rand-base64-48"

# ─── Server ──────────────────────────────────────────────────────────
PORT=3000
CORS_ORIGIN="http://localhost:5173"
NODE_ENV="development"

# ─── Redis ───────────────────────────────────────────────────────────
# Used for WebSocket adapter (Socket.IO) and caching
REDIS_HOST="127.0.0.1"
REDIS_PORT="6379"
# REDIS_PASSWORD=""  # Uncomment if your Redis requires auth

# ─── Cloudinary (Media Uploads) ──────────────────────────────────────
CLOUDINARY_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# ─── Security ────────────────────────────────────────────────────────
# Generate with: openssl rand -base64 48
CSRF_SECRET="generate-with-openssl-rand-base64-48"

# ─── Email (SMTP) ───────────────────────────────────────────────────
# Used for email verification and password reset emails
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"
EMAIL_FROM="noreply@circlesfera.com"

# ─── OpenAI (Semantic Search — optional) ─────────────────────────────
# OPENAI_API_KEY="sk-your-openai-api-key"

# ─── WebAuthn / Passkeys (optional) ─────────────────────────────────
# RP_ID="localhost"
# RP_NAME="CircleSfera"
# RP_ORIGIN="http://localhost:5173"
